# Uncomment the next line to define a global platform for your project

revenuecat_version = '5.0.0-rc.1'
revenuecatui_version = '5.0.0-rc.1'

target 'PurchasesHybridCommon' do
  platform :ios, '13.0'
  use_frameworks!

  pod 'RevenueCat', revenuecat_version

  target 'PurchasesHybridCommonTests' do
    # Pods for testing
    pod 'Quick'
    pod 'Nimble'
  end

  target 'PurchasesHybridCommonIntegrationTests' do
    # Pods for testing
    pod 'Quick'
    pod 'Nimble'
  end

end

target 'PurchasesHybridCommonUI' do
  platform :ios, '13.0'
  use_frameworks!

  pod 'RevenueCat', revenuecat_version
  pod 'RevenueCatUI', revenuecatui_version

end

target 'ObjCAPITester' do
  platform :ios, '13.0'
  use_frameworks!

  pod 'RevenueCat', revenuecat_version
  pod 'RevenueCatUI', revenuecatui_version
end

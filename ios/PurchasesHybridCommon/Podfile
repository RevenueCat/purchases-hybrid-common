  platform :ios, '11.0'
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  pod 'Purchases', '3.14.1'
  
  target 'PurchasesHybridCommonSwiftTests' do
    # Pods for testing
    pod 'Quick'
    pod 'Nimble'
  end

end


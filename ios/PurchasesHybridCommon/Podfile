# Uncomment the next line to define a global platform for your project

# Depends on https://github.com/RevenueCat/purchases-ios/pull/6289
purchases_ios_branch = 'pallares/spi-track-paywall-events'

target 'PurchasesHybridCommon' do
  platform :ios, '13.0'
  use_frameworks!

  pod 'RevenueCat', :git => 'https://github.com/RevenueCat/purchases-ios.git', :branch => purchases_ios_branch

  target 'PurchasesHybridCommonTests' do
    # Pods for testing
    pod 'Quick', '5.0.1'
    pod 'Nimble', '10.0.0'
  end

  target 'PurchasesHybridCommonIntegrationTests' do
    # Pods for testing
    pod 'Quick', '5.0.1'
    pod 'Nimble', '10.0.0'
  end

end

target 'PurchasesHybridCommonUI' do
  platform :ios, '13.0'
  use_frameworks!

  pod 'RevenueCat', :git => 'https://github.com/RevenueCat/purchases-ios.git', :branch => purchases_ios_branch
  pod 'RevenueCatUI', :git => 'https://github.com/RevenueCat/purchases-ios.git', :branch => purchases_ios_branch
end

target 'ObjCAPITester' do
  platform :ios, '13.0'
  use_frameworks!

  pod 'RevenueCat', :git => 'https://github.com/RevenueCat/purchases-ios.git', :branch => purchases_ios_branch
  pod 'RevenueCatUI', :git => 'https://github.com/RevenueCat/purchases-ios.git', :branch => purchases_ios_branch
end

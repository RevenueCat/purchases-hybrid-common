# Uncomment the next line to define a global platform for your project

target 'PurchasesHybridCommon' do
  platform :ios, '11.0'
  use_frameworks!

  # Pods for PurchasesHybridCommon
  pod 'RevenueCat', '4.13.0'
  
  target 'PurchasesHybridCommonTests' do
    # Pods for testing
    pod 'Quick'
    pod 'Nimble'
  end

  target 'PurchasesHybridCommonIntegrationTests' do
    # Pods for testing
    pod 'Quick'
    pod 'Nimble'

    # Needs https://github.com/pointfreeco/swift-snapshot-testing/pull/552 which isn't released as of 1.9.0
    pod 'SnapshotTesting', :git => 'git@github.com:pointfreeco/swift-snapshot-testing.git', :commit => 'a443288'
  end

end

target 'ObjCAPITester' do
  platform :ios, '11.0'
  use_frameworks!

  pod 'RevenueCat', '4.13.0'
end